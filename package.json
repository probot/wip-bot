{
  "name": "commit-cop",
  "version": "0.0.0-development",
  "description": "GitHub status check that ensures your pull requests follow the Conventional Commits spec",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "start": "probot run ./index.js",
    "test:watch": "DEBUG=octokitz:rest* jest test/* --watch --notify --notifyMode=change --coverage",
    "semantic-release": "semantic-release",
    "deploy": "glitch-deploy"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": "https://github.com/zieka/commit-cop",
  "keywords": [
    "probot",
    "probot-plugin"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "conventional-commit-types": "^2.2.0",
    "glitch-deploy": "https://github.com/zieka/glitch-deploy",
    "parse-commit-message": "^1.1.2",
    "probot": "^7.0.1"
  },
  "engines": {
    "node": "8"
  },
  "prettier": {
		"printWidth": 140,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "always"
	}
}
